
<configuration>
　　　　　　　　　　
<appender name="I_ASYNC" class="ch.qos.logback.core.rolling.RollingFileAppender">
    　　　　　　　　　　　　
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        　　　　　　　　　　　　　　
        <fileNamePattern>logs/inf_%d{yyyy-MM-dd}.log</fileNamePattern>
        　　　　　　　　　　　　　　
        <maxHistory>2</maxHistory>
        　　　　　　　　　　　　
    </rollingPolicy>
    　　　　　　　<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
    <level>INFO</level>
</filter>　　
    <encoder>
        　　　　　　　　　　　　　　
        <pattern>%d{{yyyy-MM-dd HH:mm:ss.SSS}  %-4relative  [%thread]  [ %-5level ]  -  %msg%n</pattern>
        　　　　　　　　　　　　
    </encoder>
    　　　　　　　　　　
</appender>
<appender name="E_ASYNC" class="ch.qos.logback.core.rolling.RollingFileAppender">
    　　　　　　　　　　　　
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        　　　　　　　　　　　　　　
        <fileNamePattern>logs/err_%d{yyyy-MM-dd}.log</fileNamePattern>
        　　　　　　　　　　　　　　
        <maxHistory>2</maxHistory>
        　　　　　　　　　　　　
    </rollingPolicy>
    　　　　　　<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
    <level>ERROR</level>
</filter>　　　　　　
    <encoder>
        　　　　　　　　　　　　　　
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}  %-4relative  [%thread]  [ %-5level ]  %logger{50}  -  %msg%n</pattern>
        　　　　　　　　　　　　
    </encoder>
    　　　　　　　　　　
</appender>
    <appender name ="I" class= "ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold >0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref ="I_ASYNC"/>
    </appender>
    <appender name ="E" class= "ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold >0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref ="E_ASYNC"/>
    </appender>
    　　　　　　　　　　
<root level="INFO">
    　　　　　　　　　　　　
    <appender-ref ref="I"/>
    <appender-ref ref="E"/>
    　　　　　　　　　　
</root>
　　　　　　　　
</configuration>